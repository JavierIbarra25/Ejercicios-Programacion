import java.util.Scanner;
   
    public class Main{
    public static void main (int nProductos){
        
        final int Desc1 = 25;
        final int Desc2 = 50;
        int ImpInicial;
        
        Scanner datos = new Scanner(System.in);
        
        System.out.println("Introduce el n√∫mero de productos");
        nProductos = datos.nextInt();
        
        System.out.println("Introduce el precio de los productos");
        ImpInicial = datos.nextInt();
        
        float ImpDescontado;
        float ImpFinal;
        
        if (nProductos <= 3){
            ImpDescontado = ImpInicial * ((float)Desc1/100);
        }
        else{
            ImpDescontado = ImpInicial * ((float)Desc2/100);
        }
        ImpFinal = ImpInicial - ImpDescontado;
         System.out.println("EL precio es de " + ImpFinal);
    }
}
