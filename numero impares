import java.util.Scanner;
public class Main {
    
public static void main ( String[] args){
    
    Scanner terclado = new Scanner (System.in);
    int numero;
    
    
    do {System.out.print("Dime un número: ");
    numero= terclado.nextInt();
    
    if(numero % 2 == 0){
    // comprueba si el número introducido es par
    System.out.println("Qué bonito es el " + numero);
    }

    else{
    System.out.println("No me gustan los números impares, adiós.");}
    }

    while(numero % 2 == 0);
}
}
